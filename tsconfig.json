{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "esModuleInterop": true,
      "jsx": "react",
      "module": "ESNext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "removeComments": true,
      "rootDir": "src",
      "sourceMap": true,
      "target": "es2016",
  },
  "include": [
      "src/**/*",
      "index.d.ts",
  ],
  "exclude": [
      "node_modules",
  ]
}
